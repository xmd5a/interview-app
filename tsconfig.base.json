{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "preserve",
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noImplicitAny": false,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@vite/api": ["libs/shared/api/src/index.ts"],
      "@vite/cache": ["libs/shared/cache/src/index.ts"],
      "@vite/ui": ["libs/shared/ui/src/index.ts"],
      "@vite/utils": ["libs/shared/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
